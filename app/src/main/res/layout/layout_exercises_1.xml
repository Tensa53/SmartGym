<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gestioneScheda.application.activity.ExercisesActivity1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvselezionemodalita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleziona la modalitÃ  di creazione della scheda:"
            android:layout_centerHorizontal="true"
            android:textColor="@color/purple_500"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/btmanuale"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Manuale"
                android:onClick="selezionaModalita"/>

            <Button
                android:id="@+id/btgenerata"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Generata"
                android:enabled="false"
                android:onClick="selezionaModalita"/>

            <Button
                android:id="@+id/bttrainer"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Trainer"
                android:enabled="false"
                android:onClick="selezionaModalita"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>